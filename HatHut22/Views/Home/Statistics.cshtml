@model Data.Models.StatisticsViewModel

@{
    ViewBag.Title = "Statistics";
}

<h2>Statistics</h2>

<div> <text>Total VAT for orders this year: @Html.DisplayFor(model => model.TotalVAT)  </text></div>

<table class="table">


    @foreach (var item in Model.Orders.Reverse())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                Number of sold items: @Html.DisplayFor(modelItem => item.Key)
            </td>

        </tr>
    }

</table>

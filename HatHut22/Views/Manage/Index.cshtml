@model HatHut22.Models.IndexViewModel
@{
    ViewBag.Title = "Inställningar";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Ändra konto inställningar.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Namn: @ViewBag.Namn</dt>
        <dd>
            [
            @if (ViewBag.Namn != null || "")
            {
                @Html.ActionLink("Ändra namn", "Edit")
            }
            else
            {
                @Html.ActionLink("Sätt namn", "Edit")
            }
            ]
        </dd>
        <dt>Password: ******</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Ändra lösenord", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Sätt lösenord", "SetPassword")
            }
            ]
        </dd>
    </dl>
</div>

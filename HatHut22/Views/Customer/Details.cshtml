@model Data.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>




<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <br />
                    <div class="row">
                        <div class="col">
                            <center>
                                <h4>Customer Details</h4>
                            </center>
                            <center>
                                <p>
                                    @Html.ActionLink("Edit", "Edit", new { id = Model.CostumerId }) |
                                    @Html.ActionLink("Back to List", "List")
                                </p>
                                
                            </center>
                        </div>
                    </div>
                    @using (@Html.BeginForm("Index", "Profile", FormMethod.Post))
                    {
                        
                        
                        <div class="row">
                            <center>
                                <label>Name</label>
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.Fullname)
                                </div>
                            </center>
                        </div>
                        <div class="row">
                            <div class="col">
                                <hr>
                            </div>
                        </div>

                        <div class="row, text-center">
                            <div class="col-md-3">
                                <label class="text-center">Customer ID</label>
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.CostumerId)
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="text-center">Phone number</label>
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.phoneNumber)
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="text-center">Email</label>
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.Email)
                                </div>

                            </div>
                            <div class="col-md-3">
                                <label class="text-center">Address</label>
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.Address)
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <hr>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <br>
        </div>
    </div>

